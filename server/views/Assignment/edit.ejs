<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 text-light">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="courseTextField">Course</label>
                    <input type="text" class="form-control"
                    id="courseTextField"
                    placeholder="Enter the Course"
                    name="Course"
                    value="<%= Assignment.Course %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="nameTextField">Assignment Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Assignments Name"
                    name="AssignmentName"
                    value="<%= Assignment.AssignmentName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="dueDateTextField">Due Date</label>
                    <input type="text" class="form-control"
                    id="dueDateTextField"
                    placeholder="Enter the Due Date ex. mm/dd/yyyy"
                    name="DueDate"
                    value="<%= Assignment.DueDate %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/assignments" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>